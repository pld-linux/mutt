--- mutt-1.5.10.orig/menu.c	2005-06-12 20:32:46.000000000 +0200
+++ mutt-1.5.10/menu.c	2005-10-07 09:28:24.000000000 +0200
@@ -1087,3 +1087,23 @@
   }
   /* not reached */
 }
+
+int update_status_time ()
+{
+  static time_t Last;
+  time_t now;
+
+  if (StatusUpdate < 0)
+    return 0;
+  else if (StatusUpdate == 0)
+    return 1;
+
+  now = time (NULL);
+  if (now - Last >= StatusUpdate)
+  {
+    Last = now;
+    return 1;
+  }
+  else
+    return 0;
+}
